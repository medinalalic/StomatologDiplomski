<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/bcc"
    tools:context=".UrediProfilActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtRegNaslov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uredi podatke"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginBottom="10dp"/>


                <TextView
                    android:id="@+id/naslovPrezime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtRegNaslov"
                    android:text="Prezime:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"

                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPrezime"
                    android:layout_below="@id/naslovPrezime"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="12dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:textSize="25sp"
                    android:textColor="@color/white"

                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_person_white_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />
                <TextView
                    android:id="@+id/naslovIme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPrezime"
                    android:text="Ime:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtIme"
                    android:layout_below="@+id/naslovIme"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="25sp"
                    android:textColor="@color/white"

                    android:padding="12dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_person_white_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />
                <TextView
                    android:id="@+id/naslovEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtIme"
                    android:text="Email:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEmail"
                    android:layout_below="@+id/naslovEmail"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="25sp"
                    android:textColor="@color/white"

                    android:padding="12dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_email_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />
                <TextView
                    android:id="@+id/naslovAdresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtEmail"
                    android:text="Adresa:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/txtAdresa"
                    android:layout_below="@+id/naslovAdresa"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="25sp"
                    android:textColor="@color/white"

                    android:padding="12dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />
                <TextView
                    android:id="@+id/naslovTelefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAdresa"
                    android:text="Telefon:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:textSize="25sp"
                    android:textColor="@color/white"

                    android:layout_below="@+id/naslovTelefon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/txtTelefon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"


                    android:padding="12dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_call_black_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />
                <TextView
                    android:id="@+id/naslovPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTelefon"
                    android:text="Password:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPassword"
                    android:inputType="numberPassword"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/naslovPass"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="25sp"
                    android:textColor="@color/white"

                    android:padding="12dp"
                    android:hint="Unesite username"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:drawableLeft="@drawable/ic_lock_white_24dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />
                <TextView
                    android:id="@+id/naslovUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPassword"
                    android:text="Username:"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUsername"
                    android:padding="12dp"
                    android:layout_below="@+id/naslovUser"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="25sp"

                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:textColorHint="#fff"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_person_white_24dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f9d7db" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spasi promjene"
                    android:layout_below="@+id/txtUsername"
                    android:id="@+id/btnRegistracija"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/white"
                    android:textSize="30sp"
                    android:textAllCaps="false"

                    android:layout_gravity="center_horizontal|center"
                    android:textStyle="normal"
                    android:clickable="true"
                    android:textColor="#213e8f"
                    android:padding="16dp"
                    android:layout_marginBottom="10dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>






