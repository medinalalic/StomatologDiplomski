<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bcc"
    android:layout_height="match_parent"
    tools:context=".PretragaTerminaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:textAlignment="center"
        android:textSize="30sp"
        android:padding="20sp"
        android:textColor="@color/white"
        android:text="Pretraga termina"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOD"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@color/white"
            android:clickable="true"
            android:layout_weight="0.5"
            android:padding="16sp"

            android:text="Odaberite datum OD"
            android:textAllCaps="false"
            android:textColor="#213e8f"
            android:textSize="30sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnDO"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/btnOD"
android:layout_weight="0.5"
            android:background="@color/white"
            android:clickable="true"

            android:padding="16dp"
            android:text="Odaberite datum DO"
            android:textAllCaps="false"
            android:textColor="#213e8f"
            android:textSize="30sp"
            android:textStyle="normal" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPretraga"
        android:textAllCaps="false"
        android:textStyle="normal"
        android:clickable="true"
        android:layout_margin="10sp"
        android:padding="16sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:text="PretraÅ¾i"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:textSize="30sp"

        android:layout_gravity="center_horizontal|center"

        android:textColor="#213e8f"
        style="@style/TextAppearance.AppCompat.Body1"
       />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:id="@+id/listaTermina"></ListView>
</LinearLayout>