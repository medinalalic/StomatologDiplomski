<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:background="@drawable/bcc"
    tools:context=".PregledPostFragment">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Odaberite dijagnozu"
    android:layout_marginTop="10sp"
    android:padding="10sp"
    android:textColor="@color/white"
    android:textSize="30sp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:textColor="#000000"

        android:layout_marginBottom="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odaberite uslugu"
android:padding="10sp"
android:textColor="@color/white"
        android:textSize="30sp"/>
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:textColor="#000000"
        android:layout_marginBottom="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odaberite terapiju"
        android:textColor="@color/white"
android:padding="10sp"
        android:textSize="30sp"/>
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:textColor="#000000"

        android:layout_marginBottom="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unesite cijenu pregleda (KM) :"
        android:textColor="@color/white"
        android:padding="10sp"
        android:textSize="30sp"/>

        <EditText
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginBottom="10sp"
            android:background="@color/white"
            android:ems="4"
            android:inputType="number"
            android:padding="10sp"

            android:textColor="#000000"
            android:textSize="30sp" /></LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPregled"
        android:padding="16dp"
        style="@style/TextAppearance.AppCompat.Body1"

        android:background="@color/white"
        android:textColor="#213e8f"
        android:text="Unesi pregled"

        android:layout_below="@+id/txtUsername"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textAllCaps="false"

        android:layout_gravity="center_horizontal|center"
        android:textStyle="normal"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>